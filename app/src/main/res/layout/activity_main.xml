<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_color">

    <!-- Top App Bar مخصص -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:paddingStart="@dimen/screen_padding"
        android:paddingEnd="@dimen/screen_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- اللوجو على الشمال -->
            <ImageView
                android:id="@+id/ivTeamIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/team_icon"
                android:contentDescription="Team members icon" />

            <!-- مسافة صغيرة بين اللوجو والنص -->
            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- اسم التطبيق في النص -->
            <TextView
                android:id="@+id/tvToolbarTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VibeCheck"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- باقي شاشة الـ Main كما هو (بدون تغيير) -->
    <LinearLayout
        android:id="@+id/contentMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/screen_padding">

        <!-- Card Text Analysis -->
        <LinearLayout
            android:id="@+id/cardTextAnalysis"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_card_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/info_icon"
                android:contentDescription="Text analysis icon" />

            <Space
                android:layout_width="0dp"
                android:layout_height="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Analysis"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="24dp" />

        <!-- Card Audio Analysis -->
        <LinearLayout
            android:id="@+id/cardAudioAnalysis"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_card_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/mic_icon"
                android:contentDescription="Audio analysis icon" />

            <Space
                android:layout_width="0dp"
                android:layout_height="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Analysis"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>