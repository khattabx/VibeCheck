<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/accent_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAudio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Audio Analysis"
        android:paddingStart="@dimen/screen_padding"
        android:paddingEnd="@dimen/screen_padding" />

    <!-- محتوى الشاشة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- Audio input box: اضغط واستمر للتسجيل -->
        <LinearLayout
            android:id="@+id/containerAudioInput"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_card_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/mic_icon"
                android:contentDescription="Microphone icon" />

            <Space
                android:layout_width="0dp"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/tvTapToRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap - hold to record"
                android:textColor="@color/black" />

            <!-- تايمر يوضح مدة التسجيل الحالية -->
            <TextView
                android:id="@+id/tvRecordTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/secondary_color"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="24dp" />

        <!-- Result / playback box: يعرض مدة التسجيل + زرار Play/Pause -->
        <LinearLayout
            android:id="@+id/containerRecordingInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- نص يوضح حالة/مدة التسجيل -->
            <TextView
                android:id="@+id/tvRecordingInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No recording yet"
                android:textColor="@color/black" />

            <!-- زرار Play / Pause للتسجيل الأخير -->
            <TextView
                android:id="@+id/btnPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textColor="@color/secondary_color"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>