<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/accent_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSupervision"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Supervision"
        android:paddingStart="@dimen/screen_padding"
        android:paddingEnd="@dimen/screen_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- صف الشعارات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- لوجو الجامعة -->
            <ImageView
                android:id="@+id/ivUniversityLogo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card_white"
                android:scaleType="centerInside"
                android:src="@drawable/university_logo"
                android:contentDescription="University logo" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <!-- لوجو الكلية (الصورة رقم 5 اللي سميتها college_logo.png) -->
            <ImageView
                android:id="@+id/ivCollegeLogo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card_white"
                android:scaleType="centerInside"
                android:src="@drawable/college_logo"
                android:contentDescription="College logo" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tvSupervision1"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Under the supervision of:"
            android:textColor="@color/secondary_color"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvSupervision2"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Dr. Marwa Elsedeek - ENG. Atef Moussa"
            android:textColor="@color/secondary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSupervision2"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Dr. Marwa Elsedeek - ENG. Atef Moussa"
            android:textColor="@color/secondary_color"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/screen_padding">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Box لكل عضو فريق -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahmed Yasser Khattab"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Space android:layout_width="0dp" android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohamed Ebrahim Hamed"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Space android:layout_width="0dp" android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eslam Mohamed Elgawessh"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Space android:layout_width="0dp" android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohammed Mahmoud Khalil"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Space android:layout_width="0dp" android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohamed Mohamed Abouelenin"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Space android:layout_width="0dp" android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hossam Youssef Mohamed"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>